<% layout('layouts/boilerplate')%>

    <h1 class="mb-4">Appointment with Dr. <%= appointment.doctor.name %>
    </h1>
    <div class="row">
        <div class="col">
            <div class="card shadow mb-4" style="border-radius: 20px;">
                <div class="card-body">
                    <div class="card special shadow d-inline-flex mb-4">
                        <h5 class="px-3 py-2 my-auto">Appointment Information</h5>
                    </div>
                    <div class="px-2">
                        <h5 class="card-title">Doctor Name: Dr. <%= appointment.doctor.name %>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= appointment.doctor.specialty %>
                            </small>
                        </p>
                        <p class="card-text">
                            <%= appointment.description %>
                        </p>
                        <p class="card-text">
                            Max number of registrants: <%= appointment.registrantLimit %>
                        </p>
                    </div>
                    <div class="mt-3 mb-1">
                        <a href="/patient/appointments" class="card-link"><button class="btn btn-success ">Back</button></a>
                        <% if (registered) { %>
                            <form class="d-inline ml-2" action="/patient/appointments/<%=appointment._id%>/cancel"
                                method="POST">
                                <button type="submit" class="btn btn-danger">Cancel Registration</button>
                            </form>
                            <span class="ml-3">You have registered!</span>
                        <% } else { %> 
                        <form class="d-inline ml-2" action="/patient/appointments/<%=appointment._id%>/register"
                            method="POST">
                            <button type="submit" class="btn btn-info">Register</button>
                        </form>
                        <% } %> 
                        
                    </div>
                </div>
            </div><!-- card -->
        </div><!-- inner col -->
    </div><!-- row -->

