<% layout('layouts/boilerplate')%>


    <h1 class="mb-4 text-center">Create Appointment</h1>
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="card shadow mb-4" style="border-radius: 20px;">
                <div class="card-body p-4">
                    <form action="/admin/appointments/new" method="POST" novalidate class="validated-form">
                        <div class="form-group mb-3">
                            <label for="doctor">Doctor</label>
                            <select class="form-select" name="doctor" id="doctor" aria-label="doctor" required>
                                <% for(let doctor of doctors) { %> 
                                    <option value="<%= doctor.id %>"><%= doctor.name %> - <%= doctor.specialty %> </option>
                                <% } %> 
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" name="description" id="description" cols="30" rows="3" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="registrantLimit">Max number of registrants</label>
                            <input type="number" name="registrantLimit" id="registrantLimit" min="0" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <button type="submit" class="mb-5 btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    