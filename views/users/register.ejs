<% layout('layouts/boilerplate')%>

    <h1 class="mb-4 text-center">Register</h1>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow mb-4" style="border-radius: 20px;">
                <div class="card-body p-4">
                    <form action="/register" method="POST" novalidate class="validated-form">
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" minlength="6" name="password" id="password" required>
                            <div class="invalid-feedback">
                                Password should be at least 6 characters
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="mb-4 btn btn-primary">Submit</button>
                        </div>
                        <div class="d-flex justify-content-center">
                            <h6>Already have an account? <a href="/login">Sign In</a></h6>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    